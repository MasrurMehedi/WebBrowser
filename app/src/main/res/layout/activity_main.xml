<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masror_mehedi.webbrowser.MainActivity">


    <EditText
        android:id="@+id/etxt_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter URL"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_url"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Go" />

    <Button
        android:id="@+id/btn_fb"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_go"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="103dp"
        android:layout_toStartOf="@+id/btn_go"
        android:text="Facebook" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btn_fb"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/btn_go"
        android:text="Google" />

    <Button
        android:id="@+id/btn_offline_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Offline Page" />
</RelativeLayout>
